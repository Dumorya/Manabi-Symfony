{% extends "base.html.twig" %}

{% block title %}Manabi - Quiz{% endblock %}
{% block script %}
    <script src="https://kit.fontawesome.com/97f34d6c2d.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
{% endblock %}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
{% endblock %}

{% block body %}
    {{ include('default/_navbar.html.twig') }}

    <div class="quizContainer">

        {% set borderColor = '' %}
        {% if list.noteBookColor == 'redNotebook' %}
            {% set borderColor = 'redBorder' %}
        {% elseif list.noteBookColor == 'yellowNotebook' %}
            {% set borderColor = 'yellowBorder' %}
        {% else %}
            {% set borderColor = 'blueBorder' %}
        {% endif %}

        <div class="headerQuiz">
            <a href="{{ path('quiz_wordslist') }}"><img src="{{ asset('images/back.png') }}" alt="retour"/>Retour</a>
            <h1 class="{{ borderColor }}">{{ list.name }}</h1>
        </div>

        {% if words|length == 0 %}
            <img class="flag" src="{{ asset('images/flag.png') }}" alt="flag"/>
            <div class="noWordNoListDiv">
                <p>Vous n'avez pas encore de mot, ajoutez-en !</p>
                <a href="{{ path('add_words', {'id': list.id}) }}"><img src="{{ asset('images/plus-symbol.png') }}" /></a>
            </div>
        {% else %}

            <div class="quizInnerContainer">
                <div class="quizPlanet">
                    <img src="{{ asset('images/planete.png') }}" alt="planète"/>
                </div>
                <div class="quiz">
                    {% for word in words %}
                        {% set questionType = '' %}

                        <div class="question">
                            <p class="questionNumber">Question {{ loop.index }} / {{ words|length }}</p>
                            <p class="questionStatement">

                                {% set randomQuestion = random(questions) %}
                                {{ randomQuestion }}
                                {% if randomQuestion == 'Que signifie ' %}
                                    {% set questionType = word.toTranslation %}
                                    <b>{{ word.fromWord }}</b> ?
                                {% else %}
                                    {% set questionType = word.fromWord %}
                                    <b>{{ word.toTranslation }}</b> ?
                                {% endif %}

                            </p>
                            <label for="question{{ loop.index }}">Réponse</label>
                            <input type="text" id="question{{ loop.index }}" data-answer="{{ questionType }}"/>
                            <p class="answerSentence"></p>
                            <p class="answer"></p>

                            {% if loop.index != words|length %}
                                <button class="validateQuestionButton">Valider</button>
                            {% else %}
                                <button class="validateQuestionEnd">Valider</button>
                                <button class="goToScore">Terminer</button>
                            {% endif %}
                        </div>

                    {% endfor %}
                </div>
                <img class="endQuizShapeLeft" src="{{ asset('images/forme_bas-fin_quiz.png') }}" alt="forme"/>
                <img class="endQuizShapeRight" src="{{ asset('images/forme_haut-fin_quiz.png') }}" alt="forme"/>
            </div>
        {% endif %}

        <div class="finalScore">
            <div class="divScore">
                <p class="score" data-words-length="{{ words|length }}"><b></b> / {{ words|length }}</p>
            </div>
            <p class="congrats"></p>
            <form action="{{ path('start_quiz') }}" method="post">
                <input type="hidden" name="_quizList" class="hiddenInput" value="{{ list.id }}"/>
                <input type="submit" class="restart" value="Recommencer"/>
            </form>
            <a class="exit" href="{{ path('homepage') }}">Quitter</a>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/quiz.js') }}"></script>
{% endblock %}
