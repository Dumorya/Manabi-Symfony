{% extends 'base.html.twig' %}

{% block title %}Manabi - Connexion{% endblock %}

{% block body %}

    <img src="{{ asset('images/angle_droit.png') }}" alt="angle droit" class="rightCorner"/>

    <img src="{{ asset('images/angle_gauche.png') }}" alt="angle gauche" class="leftCorner"/>


    <div>
        <div class="logo">
            <img src="{{ asset('images/logo_manabi.png') }}" alt="logo Manabi"/>
        </div>
        <div class="resetPasswordForm">
            <form method="post">
                <h1>Réinitialiser le mot de passe</h1>

                <div>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" required>
                    <input type="hidden" name="token" value="{{ token }}">
                </div>

                <button type="submit" class="sendRestPassword">Réinitialiser</button>
            </form>
        </div>
    </div>


    <img src="{{ asset('images/planete.png') }}" alt="planète" class="planet"/>

{% endblock %}
